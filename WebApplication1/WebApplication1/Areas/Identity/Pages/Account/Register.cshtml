<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Registro de Usuario</h3>
        <form id="registerForm" method="post">
        <div class="text-danger"asp-validation-summary="All"></div>
             <div class="row mt-4" >
                 <div class="col-sm-6">
                            @*Nombres*@
                            <div class="mb-3">
                               <label asp-for="Nombres"class="col-md-2"></label>
                                <input asp-for="Nombres"class="form-control"placeholder="Ingresa tus nombres"/>
                               <span asp-validation-for="Nombres"class="text-danger"></span>
                            </div>
                              @*Apellidos*@
                            <div class="mb-3">
                               <label asp-for="Apellidos"class="col-md-2"></label>
                                <input asp-for="Apellidos"class="form-control"placeholder="Ingresa tus apellidos"/>
                               <span asp-validation-for="Apellidos"class="text-danger"></span>
                            </div>
                              @*Celular*@
                            <div class="mb-3">
                               <label asp-for="Celular"class="col-md-2"></label>
                               <input asp-for="Celular"class="form-control"placeholder="Ingresa tu teléfono"/>
                               <span asp-validation-for="Celular" class="text-danger"></span>
                           </div>
                             @*Email*@
                            <div class="mb-3">
                               <label asp-for="Email"class="col-md-2"></label>
                                <input asp-for="Email"class="form-control"placeholder="Ingresa tu email"/>
                               <span asp-validation-for="Email"class="text-danger"></span>
                            </div>
                             @*URL*@
                            <div class="mb-3">
                              <label asp-for="URL"class="col-md-2"></label>
                               <input asp-for="URL"class="form-control"placeholder="Ingresa tu url"/>
                              <span asp-validation-for="URL"class="text-danger"></span>
                            </div>
                            @*Pais*@
                            <div class="mb-3">
                               <label asp-for="Pais"class="col-md-2"></label>
                                <input asp-for="Pais"class="form-control"placeholder="Ingresa tu pais"/>
                               <span asp-validation-for="Pais"class="text-danger"></span>
                            </div>
                                                                                                             
                       </div>      
                

                <div class="col-sm-6">
                    @*codigo pais*@
                        <div class="mb-3">
                            <label asp-for="CodigoPais"class="col-md-2"></label>
                            <input asp-for="CodigoPais"class="form-control"placeholder="Ingresa el código de tu pais"/>
                            <span asp-validation-for="CodigoPais"class="text-danger"></span>
                        </div>
                    @*Ciudad*@
                        <div class="mb-3">
                            <label asp-for="Ciudad"class="col-md-2"></label>
                            <input asp-for="Ciudad"class="form-control"placeholder="Ingresa tu ciudad"/>
                            <span asp-validation-for="Ciudad"class="text-danger"></span>
                        </div>
                         @*Dirección*@
                        <div class="mb-3">
                            <label asp-for="Direccion"class="col-md-2"></label>
                            <input asp-for="Direccion"class="form-control"placeholder="Ingresa tu dirección"/>
                            <span asp-validation-for="Direccion"class="text-danger"></span>
                        </div>
                        @*Fecha Nacimiento*@
                        <div class="mb-3">
                            <label asp-for="FechaNacimiento"class="col-md-4"></label>
                            <input type="text"name="FechaNacimiento"class="form-control"id="datepicker"placeholder="Ejemplo:1990-10-85"/>
                            <span asp-validation-for="FechaNacimiento"class="text-danger"></span>
                        </div>
                        @*Password*@
                        <div class="mb-3">
                            <label asp-for="Password"class="col-md-2"></label>
                            <input asp-for="Password"class="form-control"placeholder="Ingresa la contraseña"/>
                        <span asp-validation-for"Password" class="text-danger"></span>
                        </div>
                        @*Confirmar Password*@
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword"class="col-md-4"></label>
                            <input asp-for="ConfirmPassword"class="form-control"placeholder="Ingresa la confirmación de contraseña"/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                                     
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-18 offset-2">
                       <button type="submit" class="btn btn-success w-75 btn-lg">Registrarse</button>
                    </div>
               
                </div>
         </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
